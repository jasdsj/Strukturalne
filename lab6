#include<stdio.h>
#include<math.h>


void wypisz(unsigned int n, int * tab)
{
    int i;
    for(i=0;i<n;i++){
        printf("%d\t", tab[i]);
    }
    printf("\n");
}


void zerowanie(unsigned int n, int * tab)
{
    int i;
    for(i=0;i<n;i++){
        tab[i] = 0;
    printf("%d\t", tab[i]);
    }
    printf("\n");
}



int main(){


/*int rozmiar = 4;
int tab[rozmiar];
tab[0]=6; tab[1]=2; tab[2]=5; tab[3]=8;
wypisz(rozmiar, tab);
printf("%d\n",*tab);
int tab2[]={9,5,7,3};
wypisz(rozmiar,tab2);
printf("%d\n",tab2[2]);
*/

int tab2[]={9,5,7,3};
zerowanie(4,tab2);
}

main();

